@using JainMachinery.Models;
@using JainMachinery.DAL;
@model JainMachinery.Models.ProductBrochure

@{
    ViewBag.Title = "AddProductBrochure";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link href="~/Design/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Design/css/animations.css" rel="stylesheet" />
<link href="~/Design/css/fonts.css" rel="stylesheet" />
<link href="~/Design/css/main.css" rel="stylesheet" />
<link href="~/Design/css/shop.css" rel="stylesheet" />

<section class="contact-section">

    <div class="auto-container">
        <!--Section Title-->
        <div class="sec-title-one">
            <h4 style="font-family:Arial">Add Product Brochures</h4>
        </div>

        <div class="row" style="margin-top:10px;">

            <div class="col-sm-12 col-md-12 text-right m-b-20">
                <a href="@Url.Action("AllBrochures", "Admin", new { area="Admin"})" style="background-color:#fbacac;font-weight:bold;font-size:larger"> All Brochures</a>
            </div>
        </div>


        <div class="contact-form default-form">

            @using (Html.BeginForm("AddProductBrochure", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "AddProductBrochure", role = "form", area = "Admin" }))
            {

                <form method="post" action="#" id="contact-form">

                    <div class="row clearfix">
                        <div class="form-group col-md-6 col-sm-12 col-xs-12">
                            <input id="Title" name="Title" placeholder="Enter Brochure Title" required type="text">
                        </div>

                        <div class="form-group col-md-6 col-sm-12 col-xs-12">
                            <input id="Brochure" name="Brochure" placeholder="Enter Product Brochure" required type="file">
                        </div>


                        <div class="form-group col-md-12 col-sm-12 col-xs-12">
                            <div class="text-center"><button type="submit" class="theme-btn btn-style-one">submit</button></div>
                        </div>


                    </div>
                </form>

            }

        </div>










    </div>
</section>

@Html.Hidden("RedirectToHome", Url.Action("AllBrochures", "Admin", new { area = "Admin" }))

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link href="~/AdminPanelDesign/sweetalert.css" rel="stylesheet" />
<script src="~/AdminPanelDesign/sweetalert.js"></script>

<script type="text/javascript">
    $(function() {
        var msg='@TempData["Example"]';
        if(msg=='Succeeded') {
            sweetAlert({
                title: "Succeeded!",
                text: "Brochures has been Added SUCCESSFULLY.",
                type: "success"
            },
                                  function() {
                                      var url=$("#RedirectToHome").val();
                                      location.href=url;
                                  });

        }
        else {


        }
    });

</script>