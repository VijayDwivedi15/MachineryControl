@using JainMachinery.Models;
@using JainMachinery.DAL;
@{
    ViewBag.Title = "ProductBrochures";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<ProductBrochure> brochures = ViewData["Brochures"] as List<ProductBrochure>;
}

<header class="page_header header_white toggler_xs_right section_padding_25">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 display_table">
                <div class="header_left_logo display_table_cell">
                    <a href="@Url.Action("Index","Home")" class="logo top_logo">

                        <h3 style="font-size:xx-large"> <img src="~/Design/jainmachinelogo.png" style="height:60px;width:100px;" /> Jain Machiner<span class="highlight">Y</span> </h3>

                    </a>
                </div>
                <div class="header_mainmenu display_table_cell text-center">
                    <!-- main nav start -->
                    <nav class="mainmenu_wrapper">
                        <ul class="mainmenu nav sf-menu">
                            <li>
                                <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i>   Home</a>
                            </li>
                            <li>
                                <a href="@Url.Action("About", "Home")"> <i class="fa fa-user"></i>  About</a>
                            </li>

                            <li>
                                <a href="@Url.Action("Products","Home")"> <i class="fa fa-cogs"></i> Products</a>
                            </li>

                            <li >
                                <a href="@Url.Action("ProductDemo","Home")"> <i class="fa fa-play"></i> Product Demo</a>
                            </li>

                            <li class="active">
                                <a href="@Url.Action("ProductBrochures","Home")"> <i class="fa fa-file-pdf-o"></i>Brochures</a>
                            </li>

                            <li>
                                <a href="@Url.Action("Contact","Home")"> <i class="fa fa-map-marker"></i>  Contacts</a>
                            </li>
                            <!-- eof contacts -->
                        </ul>
                    </nav>
                    <!-- eof main nav -->
                    <!-- header toggler --><span class="toggle_menu"><span></span></span>
                </div>



            </div>
        </div>
    </div>
</header>

<section class="page_breadcrumbs ds color parallax section_padding_top_75 section_padding_bottom_75">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 text-center">
                <h2 class="text-uppercase">Product Brochures</h2>
                <ol class="breadcrumb highlightlinks">
                    <li>
                        <a href="@Url.Action("Index", "Home")">
                            Home
                        </a>
                    </li>

                    <li class="active">Product Brochures</li>
                </ol>
            </div>
        </div>
    </div>
</section>


<section id="categories" class="ls section_padding_top_150 section_padding_bottom_150" style="margin-top:-80px;">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 text-center">
                <h2 class="section_header"> <span class="small">Product</span> Brochures </h2>
            </div>
        </div>
        <div class="row columns_margin_bottom_20">

            @if (brochures != null)
            {
                foreach (var i in brochures)
                {
                    <div class="col-md-3 col-sm-6">
                        <div class="vertical-item with_border product">
                            <div class="item-media margin_0" style="text-align:center">
                                <a href="@Global.WebsiteUrl()/@i.Brochure">
                                    <img src="~/Design/images/fileicon.png" alt="" style="width:150px;">
                                </a>
                           
                               
                            </div> <a href="@Global.WebsiteUrl()/@i.Brochure" class="bg_link highlight4link">@i.Title</a>
                        </div>
                    </div>
                }
            }

            else
            {
                <div class="col-md-3 col-sm-6">
                    <div class="vertical-item with_border product">
                        <div class="item-media margin_0">
                            <img src="~/Design/images/fileicon.png" alt="">
                            <div class="media-links"></div>
                        </div> <a href="#" class="bg_link highlight4link">Machine</a>
                    </div>
                </div>
            }


        </div>


    </div>
</section>
