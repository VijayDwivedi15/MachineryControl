@using JainMachinery.Models;
@using JainMachinery.DAL;
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<ProductMaster> product = ViewData["masterproducts"] as List<ProductMaster>;
}


<header class="page_header header_white toggler_xs_right section_padding_25">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 display_table">
                <div class="header_left_logo display_table_cell">
                    <a href="@Url.Action("Index","Home")" class="logo top_logo">

                        <h3 style="font-size:xx-large"> <img src="~/Design/jainmachinelogo.png" style="height:60px;width:100px;" /> Jain Machiner<span class="highlight">Y</span> </h3>

                    </a>
                </div>
                <div class="header_mainmenu display_table_cell text-center">
                    <!-- main nav start -->
                    <nav class="mainmenu_wrapper">
                        <ul class="mainmenu nav sf-menu">
                            <li>
                                <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i>   Home</a>
                            </li>
                            <li>
                                <a href="@Url.Action("About", "Home")"> <i class="fa fa-user"></i>  About</a>
                            </li>


                            <li class="active">
                                <a href="@Url.Action("Products","Home")"> <i class="fa fa-cogs"></i> Products</a>
                            </li>
                            <li>
                                <a href="@Url.Action("ProductDemo","Home")"> <i class="fa fa-play"></i> Product Demo</a>
                            </li>

                            <li>
                                <a href="@Url.Action("ProductBrochures", "Home")"> <i class="fa fa-file-pdf-o"></i>Brochures</a>
                            </li>

                            <li>
                                <a href="@Url.Action("Contact","Home")"> <i class="fa fa-map-marker"></i>  Contacts</a>
                            </li>
                            <!-- eof contacts -->
                        </ul>
                    </nav>
                    <!-- eof main nav -->
                    <!-- header toggler --><span class="toggle_menu"><span></span></span>
                </div>



            </div>
        </div>
    </div>
</header>

<section class="page_breadcrumbs ds color parallax section_padding_top_75 section_padding_bottom_75">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 text-center">
                <h2 class="text-uppercase">Products</h2>

            </div>
        </div>
    </div>
</section>

<section class="ls section_padding_top_130 section_padding_bottom_100 columns_margin_bottom_20">
    <div class="container">
        <div class="isotope_container isotope row masonry-layout columns_margin_bottom_20">

            @if (product != null)
            {
                foreach (var p in product)
                {

                    <div class="isotope-item col-md-4 col-sm-6">
                        <div class="vertical-item content-padding with_border rounded text-center">
                            <div class="item-media top_rounded overflow_hidden"> <img src="@Global.WebsiteUrl()@p.ProductImage" alt="Agriculter Machines" style="height:300px;width:355px;" /> </div>
                            <div class="item-content" style="height:300px;">
                                <h4 class="entry-title"> <a href="@Url.Action("AllProducts", "Home", new { ProductID = @p.ProductID })">@p.ProductName</a> </h4>
                                <p style="text-align:justify">@p.ProductDetail</p>

                            </div>
                        </div>
                    </div>

                }
            }
            else
            {

                <div class="isotope-item col-md-4 col-sm-6">
                    <div class="vertical-item content-padding with_border rounded text-center">
                        <div class="item-media top_rounded overflow_hidden"> <img src="~/Design/Agriculter%20Machine/agriculter.jpg" alt="Agriculter Machines" style="height:300px;" /> </div>
                        <div class="item-content">
                            <h4 class="entry-title"> <a href="@Url.Action("ProductDetail","Home")">Agriculture</a> </h4>
                            <p style="text-align:justify">Agricultural machinery is used in farming or other agriculture. There are many types of such equipment, from hand tools and power tools to tractors and the countless kinds of farm implements that they tow or operate.</p>
                            <p class="topmargin_25 small-text big highlight2links"> <a href="@Url.Action("ProductDetail","Home")">read more</a> </p>
                        </div>
                    </div>
                </div>
            }








        </div>
    </div>
</section>

